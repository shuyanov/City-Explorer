FROM node:alpine

WORKDIR /app
# COPY package.json and package-lock.json files
COPY package*.json ./

# generated prisma files
COPY prisma ./prisma/

# COPY ENV variable
COPY .env ./

# COPY tsconfig.json file
COPY tsconfig.json ./

# COPY
COPY . .

RUN npm ci
RUN npx prisma generate
EXPOSE 3000
CMD ["sh", "-c", "npx prisma migrate dev && npm run start:dev"]
